
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";


}

<h2>@ViewData["Title"]</h2>
<h5 class="text-danger">@ViewData["Error"]</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="RegisterUser" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Username"></label>
                <input asp-for="@Model.Username" class="form-control" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" type="password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" type="password"/>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            @Html.LabelFor(p => p.IsTutor, "Регистрирам се като преподавател")
            @Html.CheckBoxFor(p => p.IsTutor, false)
            <br/>

            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
