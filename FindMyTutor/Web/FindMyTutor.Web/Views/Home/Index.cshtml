@model HomeViewModel
@using FindMyTutor.Web.ViewModels.PartialView

@{
    ViewData["Title"] = "Home Page";
}

@if (TempData.ContainsKey("InvalidOffer") && (bool)TempData.Peek("InvalidOffer"))
{
    await Html.RenderPartialAsync("Partial/_InvalidView.cshtml");
    TempData["InvalidOffer"] = false;
}

@if (TempData.ContainsKey("Success") && (bool)TempData.Peek("Success"))
{
    await Html.RenderPartialAsync("Partial/_SuccessfulOffer.cshtml");
    TempData["Success"] = false;
}
<body class="container">

    <br />
    <div id="allSubjects">

        @{ int index = 0;}
        @{ int totalLength = FindMyTutor.Web.Helpers.Constants.ButtonStyles.Length;}
        @foreach (var subject in Model.Subjects)
        {
            int currentIndex = index % totalLength;
            string currentStyle = FindMyTutor.Web.Helpers.Constants.ButtonStyles[currentIndex];
            @await Html.PartialAsync("_CreateButton", new CreateSubjectButtonModel { Subject = subject, ButtonStyle = currentStyle });

            index++;
        }

    </div>
    <br />

    <div>
        <select id="levels" style="display:none"></select>
        <br />
    </div>
    <br />
    <div id="subjectDiv">

        <select id="subjects" style="display:none"></select>
        <h4 id="subjectMessage" class="warning" style="display:none">В момента няма такива оферти</h4>
        <br />
    </div>

    <div id="offers"></div>


</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>

        function loadLevels(id) {

            $('#subjects').hide();
            $('#subjectMessage').hide();
            $('#offers').hide();
            $('p').removeClass('currentlySelected');
            $('#' + id).addClass('currentlySelected');
            let url = "/loadLevels/" + id;
            $.get({
                type: 'GET',
                url: url,
                success: function (result) {
                    $('#levels').show();
                    $("#levels").empty();
                    $('#levels').append('<option label="Изберете ниво" value="0"></option>');
                    for (let name of result) {

                        console.log(name);
                        let element = $(`<option label="${name.text}"
                                      value="${name.value}" onselect="loadSubjectNames(${name.value})"></option>`);
                        //let label = $("<label>").attr({ for: name.text });
                        //label.text(name.text);


                        $("#levels").append(element);
                        //$("#levels").append(label);
                        $("#levels").append("<br>");
                    }
                }
            })
        }

        function loadSubjects() {


            $.ajax({
                type: 'GET',
                url: '/getSubjects',

                success: function (result) {
                    let s = '';
                    for (let name of result) {
                        s += "<h2>" + name + "</h2>"
                    }
                    $('#subjects').append(s);
                }
            });

        }

        $('#levels').change(loadSubjectNames);

        function loadSubjectNames() {

            $('#subjects').empty();

            let name = $('option:selected').val();
            console.log(name);
            let subjectId = $($('.currentlySelected')[0]).attr('id');
            console.log(subjectId);


            let url = `/loadSubjectNames/${subjectId}/${name}`;


            $.get({
                type: 'GET',
                url: url,
                success: function (result) {
                    console.log(url);
                    console.log(result);
                    if (result.length == 0) {
                        $('#subjectMessage').show();
                    } else {

                        $('#subjects').show();
                        $('#subjects').append(`<option label="Изберете предмет"
                                      value="0"></option>`);
                        for (let name of result) {

                            let element = $(`<option label="${name.text}"
                                      value="${name.value}"></option>`);
                            //  console.log(element);
                            //  console.log(element);


                            $("#subjects").append(element);
                            //  element.change(loadSubjectNames(name));

                        }
                    }

                }
            })
        }

        $('#subjects').change(loadOffers)
        function loadOffers() {

            let id = $('#subjects option:selected').val();
            let url = '/getOffersWithSubjectId/' + id;
            $.get({
                type: 'GET',
                url: url,
                success: function (result) {
                    console.log(url);
                    console.log(result);
                    if (result.length == 0) {
                        $('#subjectMessage').show();
                    } else {

                        $('#offers').show();


                        for (let name of result) {

                            let element = $(`<a class="btn btn-outline-success btn-lg" href="/Offer/Details/${name.id}">${name.title}</a>`);
                            //  console.log(element);
                            //  console.log(element);


                            $("#offers").append(element);
                            //  element.change(loadSubjectNames(name));

                        }
                    }

                }
            })
        }

    </script>


}



