@model FindMyTutor.Web.ViewModels.Message.CreateMessageViewModel

<h3>Напиши отговор</h3>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-controller="Message" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10" cols="20"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RecipientId" class="form-control" />
                <span asp-validation-for="RecipientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="OfferId" class="form-control" />
                <span asp-validation-for="OfferId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="Отговор" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



